<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.d.aster">

    <application
        android:name="com.d.aster.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.d.aster.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.d.aster.activity.Get"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.d.aster.activity.Post"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.d.aster.activity.Download"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.d.aster.activity.Upload"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>

</manifest>